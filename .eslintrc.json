{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020, // Поддержка последних стандартов JS
    "sourceType": "module" // Поддержка ES модулей
  },
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended", // Рекомендуемые правила для TypeScript
    "plugin:prettier/recommended" // Интеграция с Prettier (если используется)
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "@next/next/no-img-element": "off"
  }
}
